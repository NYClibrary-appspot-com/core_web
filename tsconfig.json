{
  "compilerOptions": {
      "target": "es6",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": false,
      "declaration": false
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
      "node_modules",
      "typings"
  ]
}